    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_operation_name_same"
        android:text="01259251208"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="25sp"
        android:id="@+id/txt_number_same"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt_number_same"
        android:layout_marginTop="0sp"
        >
        <ImageButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="40sp"
            android:layout_margin="2sp"
            android:background="@drawable/button_call"
            android:src="@drawable/ic_call"
            android:padding="8sp"
            android:scaleType="fitCenter"
            android:id="@+id/btn_same_call"/>
        <ImageButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="40sp"
            android:layout_margin="2sp"
            android:background="@drawable/button_sms"
            android:src="@drawable/ic_sms"
            android:padding="8sp"
            android:scaleType="fitCenter"
            android:id="@+id/btn_same_sms"/>
    </LinearLayout>
</RelativeLayout>